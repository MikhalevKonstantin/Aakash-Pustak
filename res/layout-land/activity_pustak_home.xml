<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PustakHome" >

    <ImageButton
        android:id="@+id/openbooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/getbooks"
        android:layout_marginLeft="199dp"
        android:contentDescription="@string/openbooks_contentDesc"
        android:layout_toRightOf="@+id/getbooks"
        android:background="@android:color/transparent"
        android:src="@drawable/openbooks" />

    <com.devsmart.android.ui.HorizontalListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:padding="15dp"
        android:layout_above="@+id/openbooks"
        android:layout_alignLeft="@+id/getbooks"
        android:layout_alignRight="@+id/openbooks"
        android:layout_marginBottom="20dp"
        android:background="@drawable/listview_border">

    </com.devsmart.android.ui.HorizontalListView>

    <ImageButton
        android:id="@+id/getbooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="180dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/getbooks_contentDesc"
        android:src="@drawable/getbooks" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/openbooks"
        android:text="Quick Read"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>